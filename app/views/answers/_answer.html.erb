<div class ="panel panel-default">
    <div class ="panel-body">
      <h2>Answered by: <%= answer.user.profile.name %></h2>
      <p><%= answer.content %></p>
      <p>Upvotes: <%= answer.votes_for.size %></p>
      <hr>

		<% if user_signed_in? %>
	      <% if current_user.voted_for? answer %>
	        <p> <%= link_to "Cancel upvote", downvote_answer_path(answer), class: "btn btn-warning" %></p>
	      <% else %>
	        <p><%= link_to "Upvote", upvote_answer_path(answer), class: "btn btn-success"%></p>
	      <% end %>
	    <% end %>

    </div>
  </div>